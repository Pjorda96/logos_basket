{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto" style="margin-top:6rem">
                {# <div class="card card-signin my-5" style="background-color:background-color: rgba(223, 153, 48, 0.877);
                    border-radius: 100px 10px 10px 10px;"> #}
                <div class="card-body">
                    <div class="row">
                        <img alt="Imagen del usuario" class="mx-auto logo" src="{{ asset('img/imagenlogo.png') }}">
                    </div>
                    <h5 class="card-title text-center carta">Entrar</h5>
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <div class="container">
                        <form action="{{ path('login') }}" method="post">
                            <div class="row">
                                <div class="col-md-6 mx-auto">
                                    <label for="selector">Escoja uno:</label>
                                    <select class="form-control dropdown" id="selector">
                                        <option value="dni" seleted>DNI</option>
                                        <option value="pasaporte">PASAPORTE</option>
                                        <option value="nie">NIE</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="nif">NIF:</label>
                                    <input type="text" id="nif" class="form-control" name="_nif"
                                           value="{{ last_username }}" placeholder="NIF" required autofocus>
                                </div>
                            </div>
                            <div class="form-label-group pass">
                                <label for="inputPassword">Contraseña:</label>
                                <input class="form-control" id="inputPassword" name="_password" placeholder="Contraseña"
                                       required type="password"></div>
                            <br>
                            <p>¿Todavía no tienes cuenta? <a href="{{ path("user_registration") }}">Registro</a></p>
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Entrar
                            </button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
