{% extends 'base.html.twig' %}

{% block title %}Administración{% endblock %}

{% block body %}
    <div class="container-fluid fill">
        <div class="row caja">
            <div class="col-md-3 col-lg-2 menu">
                <div class="row logos">
                    <img alt="Logo" class="logo" src="{{ asset('img/imagenlogo.png') }}">
                </div>

                <!-- Menu hamburguesa -->
                <nav class="navbar navbar-expand-lg navbar-dark hamburguesa">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <form>
                            <div class="form-check checkblock">
                                <input type="checkbox" class="form-check-input" id="jugador">
                                <label class="form-check-label" for="jugador" style="color: white">Jugador</label>
                            </div>
                            <div class="form-check checkblock">
                                <input type="checkbox" class="form-check-input" id="Entrenador">
                                <label class="form-check-label" for="Entrenador" style="color: white">Entrenador</label>
                            </div>
                            <div class="form-check checkblock">
                                <input type="checkbox" class="form-check-input" id="Tutor">
                                <label class="form-check-label" for="Tutor" style="color: white">Tutor</label>
                            </div>


                            <div class="row filtro1">
                                {#Select Bootstrap#}
                                <link rel="stylesheet"
                                      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
                                <link rel="stylesheet"
                                      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css"/>
                                <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
                                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
                                <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
                                {#Select Bootstrap#}


                                <label for="category"></label>
                                <select class="selectpicker" multiple data-live-search="true" id="category">
                                    {% for category in categories %}
                                        <option>{{ category }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="row">
                                <a href="#"><i class="fas fa-plus-circle fa-2x adminIcon"></i></a>
                                <a href="#"><i class="fas fa-ban fa-2x adminIcon"></i></a>
                                <a href="#"><i class="fas fa-pencil-alt fa-2x adminIcon"></i></a>
                                <a href="#"><i class="far fa-file-pdf fa-2x adminIcon" style="color:red;"></i></a>
                            </div>

                            <div class="ml-4 mt-3">
                                <a href="{{ path('logout') }}" class="btn btn-primary">Cerrar sesion</a>
                            </div>
                        </form>
                    </div>
                </nav>

                <!-- Fin menu hamburguesa -->
            </div>

            <div class="col-md-9 col-lg-10" style="padding-right: 0; padding-left: 0;">

                <table class="table table-hover table-light">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">NIF</th>
                        <th scope="col">Email</th>
                        <th scope="col">Categoría</th>
                        <th scope="col">Equipo</th>
                        <th scope="col">Opciones</th>
                    </tr>
                    </thead>
                    <tbody>

                        {% if fichas is same as ([]) %}
                            <tr>
                                <td></td>
                                <td>No se han encontrado datos.</td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        {% endif %}

                        {% for ficha in fichas %}
                            <tr>
                                <th scope="row">{{ ficha.id }}</th>
                                <td>{{ ficha.nombre }}</td>
                                <td>{{ ficha.apellido1 }} {{ ficha.apellido2 }}</td>
                                <td>{{ ficha.dni }}</td>
                                <td>{{ ficha.email }}</td>
                                <td>{{ ficha.categoria }}</td>
                                <td>{{ ficha.equipo }}</td>
                                <td>
                                    <a href="{{ path('datos_show', { 'id': ficha.id }) }}" class="mr-2"><i class="fas fa-eye"></i></a>
                                    <a href="{{ path('datos_delete', { 'id': ficha.id }) }}" class="mr-2"><i class="fas fa-trash"></i></a>
                                    <a href="{{ path('datos_edit', { 'id': ficha.id }) }}"><i class="fas fa-pencil-alt"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}
